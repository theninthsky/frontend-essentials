{
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "jsx": "react-jsx",
    "rootDir": "./src",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./esm",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src"]
}
